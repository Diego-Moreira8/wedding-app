generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  phone String
  role  Role   @default(GUEST)
  gift  Gift?
}

model Gift {
  id     Int    @id @default(autoincrement())
  name   String
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?   @unique
}

enum Role {
  ADMIN
  GUEST
}
